{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/schemas/*": ["./src/app/lib/schemas/*"],
      "@/services/*": ["./src/app/lib/services/*"],
      "@/controllers/*": ["./src/app/lib/controllers/*"],
      "@/repositories/*": ["./src/app/lib/repositories/*"],
      "@/actions/*": ["./src/app/lib/actions/*"],
      "@/types/*": ["./src/app/lib/types/*"],
      "@/lib/*": ["./src/app/lib/*"],
      "@/db": ["./src/app/lib/services/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
